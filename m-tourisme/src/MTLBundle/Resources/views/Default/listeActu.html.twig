{% extends 'layout.html.twig' %}

    {% block stylesheets %}
        <!-- Bootstrap -->
        <link href="{{ asset('css/bootstrap.min.css')}}" rel="stylesheet">
        <!-- CSS Perso -->
        <link rel="stylesheet" type="text/css" href="{{  asset('css/stylesheetListeActu.css')}}">
        <link rel="stylesheet" type="text/css" href="{{ asset('css/stylesheetHeader.css')}}">
        <link rel="stylesheet" type="text/css" href="{{  asset('css/stylesheetFooter.css')}}">
        <!-- Fonts -->
        <link href="https://fonts.googleapis.com/css?family=Courgette" rel="stylesheet">
        <link rel="stylesheet" type="text/css" href="{{ asset('css/fonts.css')}}">
    {% endblock %}


    {% block listeActu %}
        <div class="sectionListeActu">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="titreActualités">Actualités</h1>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        {% for actu in actus %}
                            <h2 class="titreActu">{{ actu.titre }}</h2>
                            <p class="contenu">{{ actu.contenu }}</p>
                            <p class="img-responsive img-actu">{{ asset('upload/' ~ actu.image) }}<br/><a href="{{ path('afficher_actu', {'id': actu.id}) }}">En lire plus...</a></p>
                            <p class="date">{{ actu.date | date("d-m-Y") }}</p><br/>
                            <hr class="separation">
                        {% endfor %}
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <p class="back">
                            <a href="index">Retourner au site</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    {% endblock %}


