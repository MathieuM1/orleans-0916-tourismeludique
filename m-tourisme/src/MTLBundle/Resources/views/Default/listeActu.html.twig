{% extends 'layoutActu.html.twig' %}

    {% block stylesheets %}
        <!-- Bootstrap -->
        <link href="{{ asset('css/bootstrap.min.css')}}" rel="stylesheet">

        <!-- CSS Perso -->
        <link rel="stylesheet" type="text/css" href="{{  asset('css/stylesheetListeActu.css')}}">
        <link rel="stylesheet" type="text/css" href="{{ asset('css/stylesheetHeader.css')}}">
        <link rel="stylesheet" type="text/css" href="{{  asset('css/stylesheetFooter.css')}}">

        <!-- Fonts -->
        <link href="https://fonts.googleapis.com/css?family=Courgette" rel="stylesheet">
        <link rel="stylesheet" type="text/css" href="{{ asset('css/fonts.css')}}">

        <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
        <!-- Include all compiled plugins (below), or include individual files as needed -->
        <script src="{{ asset('js/bootstrap.min.js')}}"></script>
    {% endblock %}

    {% block listeActu %}
        <div class="sectionListeActu">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="titreActualités">Actualités</h1>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12">
                        {% for actu in actus %}
                            <h2 class="titreActu" id="{{ actu.id }}">{{ actu.titre |truncate(40, true,'...')}}</h2><br/>
                        <a class="link" href="{{ path('afficher_actu', {'id': actu.id}) }}"><p class="contenu">{{ actu
                                .contenu|truncate(100, true,'...') | raw }}</p></a><br/>
                            <a href="{{ path('afficher_actu', {'id': actu.id}) }}"><img src="{{ asset('upload/' ~ actu.image) }}"
                                                                                        class="img-responsive img-actu"></a><br/>
                            <a href="{{ path('afficher_actu', {'id': actu.id}) }}">En lire plus...</a><br/>
                            <div class="row">
                                <div class="col-lg-6">
                                    <p class="backHome">
                                        <a href="index">Retourner à la page d'accueil</a>
                                    </p>
                                </div>
                                <div class="col-lg-6">
                                    <p class="date">Le {{ actu.date | date("d-m-Y") }}</p><br/>
                                </div>
                            </div>
                            <hr class="separation">
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    {% endblock %}





