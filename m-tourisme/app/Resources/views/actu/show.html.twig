{% extends 'base.html.twig' %}

{% block body %}
    <h1>Actu</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ actu.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ actu.titre }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ actu.contenu }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if actu.date %}{{ actu.date|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Photos</th>
                <td>{{ actu.photos }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('actu_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('actu_edit', { 'id': actu.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
